<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Screen2">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view">


    </View>


    <GridLayout
        android:id="@+id/grid"
        android:columnCount="2"
        android:rowCount="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24sp"
        android:layout_marginRight="24sp"
        android:layout_marginTop="-100sp"
        android:layout_below="@+id/top_view">

        <!--        1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/android"

            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15sp"
            android:elevation="18sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:contentDescription="1"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20sp"
                    android:background="@drawable/android"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Development"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="15sp"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>






        <!--        2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/web"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15sp"
            android:elevation="18sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20sp"
                    android:background="@drawable/coding"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Development"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="15sp"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <!--        3-->

        <androidx.cardview.widget.CardView
            android:id="@+id/artificial"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15sp"
            android:elevation="12sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20sp"
                    android:background="@drawable/artificial_intelligence"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artificial Intelligence"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="15sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!--        4-->

        <androidx.cardview.widget.CardView
            android:id="@+id/machine"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15sp"
            android:elevation="12sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20sp"
                    android:background="@drawable/machine_learning"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machine Learning"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="15sp"/>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <!--        5-->

        <androidx.cardview.widget.CardView
            android:id="@+id/blockchain"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15sp"
            android:elevation="12sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20sp"
                    android:background="@drawable/blockchain"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blockchain Development"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="15sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--        6-->

        <androidx.cardview.widget.CardView
            android:id="@+id/web3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="15sp"
            android:elevation="12sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20sp"
                    android:background="@drawable/web3"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web3 Development"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="15sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/grid"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/teal_200"
        android:contentDescription="submit"
        android:layout_centerHorizontal="true"

        android:src="@drawable/ic_call" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dash Board"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24sp"/>


</RelativeLayout>